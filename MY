  <!-- Firebase SDK -->
  <script type="module">
    // Import Firebase functions
    import { initializeApp } from "https://www.gstatic.com/firebasejs/11.0.1/firebase-app.js";
    import { getDatabase, ref, onValue } from "https://www.gstatic.com/firebasejs/11.0.1/firebase-database.js";

    // Your Firebase config
    const firebaseConfig = {
      apiKey: "AIzaSyB0bp-0DOhN5RPQks-K_wykCYKOJao18VM",
      authDomain: "dht-11-971bc.firebaseapp.com",
      databaseURL: "https://dht-11-971bc-default-rtdb.asia-southeast1.firebasedatabase.app",
      projectId: "dht-11-971bc",
      storageBucket: "dht-11-971bc.firebasestorage.app",
      messagingSenderId: "49008720197",
      appId: "1:49008720197:web:c25a4a08e715547045e62c"
    };

    // Initialize Firebase
    const app = initializeApp(firebaseConfig);
    const db = getDatabase(app);

    // Live Temperature listener
    const tempRef = ref(db, 'DHT_11/Temperature');
    onValue(tempRef, (snapshot) => {
      const temp = snapshot.val();
      document.getElementById("temperature").innerText = temp !== null ? temp + " ¬∞C" : "-- ¬∞C";
    });

    // Live Humidity listener
    const humRef = ref(db, 'DHT_11/Humidity');
    onValue(humRef, (snapshot) => {
      const hum = snapshot.val();
      document.getElementById("humidity").innerText = hum !== null ? hum + " %" : "-- %";
    });
  </script>
